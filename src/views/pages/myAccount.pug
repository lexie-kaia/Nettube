extends ../layouts/layoutSingle
include ../mixins/myAccountVideoBlock

block content
  main.account
    
    .profile_section
      .profile_row
        .profile_avatar
          img(src=user.avatarUrl, alt="")
        .profile_username=user.username
        .profile_email=user.email
      .profile_btns
        button.btn_box.blue_long(type="button")
          a(href=routes.editProfile(user.id)) Edit Profile
        button.btn_box.blue_long(type="button")
          a(href=routes.changePassword(user.id)) Change Password
        
    .videos_section
      each video in user.videos
        +myAccountVideoBlock({
          id: video.id,
          videoFileUrl: video.videoFileUrl,
          title: video.title,
          views: video.views,
          createdAt: video.createdAt,
        })